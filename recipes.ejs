    <article>
      <p>Hello Ronda!</p>
      <h1>Healthy Recipes</h1>
      <div class="recipeButtonsContainer">
        <form action="/recipeItems" method="post" >
          <input type="text" value="breakfast" name="query" class="hid">
          <input type="submit" value="Breakfast" class="rb breakfast" >
        </form>
       
        <form action="/recipeItems" method="post" >
          <input type="text" value="lunch" name="query" class="hid">
          <input type="submit" value="Lunch" class="rb lunch" >
        </form>
        <form action="/recipeItems" method="post" >
          <input type="text" value="dinner" name="query" class="hid">
          <input type="submit" value="Dinner"  class="rb dinner" >
        </form>
       <form action="/recipeItems" method="post" >
          <input type="text" value="snack" name="query" class="hid">

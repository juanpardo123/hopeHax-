    <article>
      <p>Hello !!</p>
      <h1>Search result:</h1>
      <% for (let i=0; i< recipes.length; i++) { %>
      <div class="card">
        <div class="holder">
          <img src="<%=recipes[i].recipe.image%>" class="main-recipe-image" />
        </div>
        <div class="vertical">
          <h1><%=recipes[i].recipe.label%></h1>
          <h2>Meal Type: <%=recipes[i].recipe.mealType%></h2>
          <div class="horizontal">
            <div class="desc calories">
              <h3><%=Math.round(recipes[i].recipe.calories)%></h3>
              <h4>Calories</h4>
            </div>
            <div class="desc protein">
              <h3><%=Math.round(recipes[i].recipe.totalWeight)%></h3>
              <h4>Total Weight</h4>
            </div>
            <div class="linkRecipes">
            </div>
            <div class="desc fats">
              <h3><%=recipes[i].recipe.yield%></h3>
              <h4>Yields</h4>
            </div>
            <div class="recipe ingredients">
            
                <h4>Ingredients</h4>
                <% let bob = ""; %>
                <%recipes[i].recipe.ingredients.forEach(function(ingredient){ %>
                  <%bob += ('|' + ingredient.text ); %>

              <p><%= ingredient.text %></p>
              <% }); %>
              <a href="<%=recipes[i].recipe.url%>" id="linkRecipesUrl"
                >View full recipe!</a
              >
            </div>
          </div>

          <!-- <form action="/recipes" method="GET">
            <input
              type="text"
              name="query"
              placeholder="What Kind of Recipe?"
            />
            <button type="submit" class="button2">Search</button>
          </form> -->
          <form action="/saveRecipe" method="post">
            <input
              type="text"
              value="<%=recipes[i].recipe.label%>"
              name="recipeName"
              class="hid"
              readonly
            />
            <input
              type="text"
              value="<%=recipes[i].recipe.image%>"
              name="recipeImage"
              class="hid"
              readonly
            />
            <input
              type="text"
              value="<%=recipes[i].recipe.calories%>"
              name="recipeCalories"
              class="hid"
              readonly
            />
            <input
              type="text"
              value="<%=recipes[i].recipe.totalWeight%>"
              name="recipeTotalWeight"
              class="hid"
              readonly
            />
            <input
              type="text"
              value="<%=recipes[i].recipe.totalTime%>"
              name="recipeTotalTime"
              class="hid"
              readonly
            />
            <input
              type="text"
              value="<%=recipes[i].recipe.yield%>"
              name="recipeYield"
              class="hid"
              readonly
            />
            <input
            type="text"
            value="<%=recipes[i].recipe.url%>"
            name="RecipeURL"
            class="hid"
            readonly
          />
          <input
          type="text"
          value="<%=bob%>"
          name="ingredients"
          class="hid"
          readonly
        />
        
        <input
        type="text"
      
        value="<%=recipes[i].recipe.mealType%>"
        name="recipeMealType"
        class="hid"
        readonly
      />
            <input type="submit" value="save" class="add" />
          </form>
        </div>
      </div>
      <% } %>
